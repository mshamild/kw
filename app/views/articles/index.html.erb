<p id="notice"><%= notice %></p>
<h1>Новости и объявления</h1>
<div class="na">
  <%= render 'form' %>
  <hr>
</div>

<% @articles.each do |article| %>

<div class="post">
  <div class="author">
    <table>
      <tr>
        <td width="560px">
          <%= article.user_name %>  <%=article.user_surname %>
        </td>
        <td align="right">
          <% if current_user.id == article.user_id %>
            <%= link_to '×', article, method: :delete, data: { confirm: 'Are you sure?' } %>
          <% else %>
              <span>×</span>
          <% end %>
        </td>
      </tr>
    </table>
  </div>
  <div class="title">
    <%= article.title %>
  </div>
  <div class="content">
    <%= article.content %>
  </div>
  <div class="links">
    <%= article.created_at.strftime("%d %b %Y") %>, <%= article.created_at.strftime("%H:%M") %>
    <%= link_to 'Show', article %>
    <% if current_user.id == article.user_id %>
      <%= link_to 'Edit', edit_article_path(article) %>
    <% else %>
      <span>Edit</span>
    <% end %>
    <hr>
  </div>
  <div class="comlab">Комментарии:</div>
  <div class="comments">
    <%= render article.comments %>
    <hr>
    <div class="com_url">
      <%= link_to 'Comment', article %>
    </div>
    <div class="hr"><hr></div>
  </div>
  <br /><br />
</div>
<% end %>
<br>
